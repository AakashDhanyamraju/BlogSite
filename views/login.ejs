<%- include('./partials/head.ejs') %>
<body>
    
    <div>
        <nav style="margin-bottom: 20px;">
            <ul>
                <li><a href="#">BlogSite</a></li>
                <li><a href="/login">Login</a></li>
                <li><a href="/register">Register</a></li>
            </ul>
        </nav>
        <div>
            <form class=" login " method="POST" action="/login">
                <!-- <input type="text" name="username" placeholder="Enter Username" required> -->
                <input type="email" class="m-3" name="email" placeholder="Enter Email" required>
                <input type="password" class="m-3" name="password" placeholder="Enter password" required>
                <button type="submit" class="m-3" >Login</button>
            </form>
        </div>
        
        

    </div>


    <script>
        const form = document.querySelector('form')
        form.addEventListener('submit', async (e) => {
            e.preventDefault()
            // const username = form.username.value
            const email = form.email.value
            const password = form.password.value

            try{
                fetch('/login', {
                    method: "POST",
                    body : JSON.stringify({ email, password}),
                    headers: {'Content-Type': 'application/json'}
                })
                .then(res => res.json())
                .then(data => {
                    // console.log(data)
                    if(data.message === 'Login'){
                        location.assign('/')
                    }
                    else{
                        alert(data.message)
                    }
                    
                    
                }).catch(err =>  alert(err))
               
                
                
                // const data = await res.json()
                // console.log(data)

            }
            catch(err){
                console.log(err)
            }

        })
    </script>

</body>
</html>